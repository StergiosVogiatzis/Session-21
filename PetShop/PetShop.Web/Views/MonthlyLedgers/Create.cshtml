                @{
                    var years = new List<string>();
                    years.Add("2020");
                    years.Add("2021");
                    years.Add("2022");
                    var selectedYears = new SelectList(years);
                }
                <input asp-for="Year" type="number" class="form-control" min="1999" max="2050" step="1" />
