                    });
                    items.Add(new SelectListItem
                    {
                        Text = "July",
                        Value = "7"
                    });
                    items.Add(new SelectListItem
                    {
                        Text = "August",
                        Value = "8"
                    });
                    items.Add(new SelectListItem
                    {
                        Text = "September",
                        Value = "9"
                    });
                    items.Add(new SelectListItem
                    {
                        Text = "October",
                        Value = "10"
                    });
                    items.Add(new SelectListItem
                    {
                        Text = "November",
